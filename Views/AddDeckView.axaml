<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:local="clr-namespace:PokeMemo.ViewModels"
			 xmlns:models="clr-namespace:PokeMemo.Models"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="PokeMemo.Views.AddDeckView"
			 x:CompileBindings="False">
	
	<Design.DataContext>
		<local:CreateDeckViewModel/>
	</Design.DataContext>
	
	<StackPanel Margin="30, 20" Spacing="30">
		<!-- Title bar -->
		<Grid Height="40" ColumnDefinitions="Auto, *, Auto">
			<TextBlock
				VerticalAlignment="Center"
				Grid.Column="0"
				Text="Create a new deck"
				FontSize="32" />
			<Button Grid.Column="2" Content="Back" Command="{Binding NavigateToDeckLibraryViewCommand}"/>
		</Grid>
	</StackPanel>
</UserControl>