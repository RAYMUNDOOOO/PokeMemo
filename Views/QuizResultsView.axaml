<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:local="clr-namespace:PokeMemo.ViewModels"
			 xmlns:models="clr-namespace:PokeMemo.Models"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="PokeMemo.Views.QuizResultsView"
			 x:CompileBindings="False">
	<Design.DataContext>
		<local:QuizResultsViewModel/>
	</Design.DataContext>
	<StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
		<TextBlock 
			Text="Quiz Results" 
			FontSize="24" 
			FontWeight="Bold" 
			HorizontalAlignment="Center" 
			Margin="20" />
		<TextBlock 
			Text="Your Score:" 
			FontSize="20" 
			HorizontalAlignment="Center" 
			Margin="20" />
		<TextBlock 
			Text="{Binding ScoreText}" 
			FontSize="30" 
			HorizontalAlignment="Center" 
			Margin="10,10,10,20" />
		<TextBlock
			Text="{Binding ResultText}"
			FontSize="24"
			HorizontalAlignment="Center"
			Margin="10,10,10,40" />
		<Button Content="Back to Deck Library" Command="{Binding NavigateToDeckLibraryViewCommand}" HorizontalAlignment="Center" Padding="10" Margin="10"/>
	</StackPanel>
</UserControl>
